@model IEnumerable<ECommerce.ViewModels.DonHangViewModel>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<h2>Đơn hàng của tôi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Ngày Đặt</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donHang in Model)
        {
            <tr>
                <td>@donHang.MaHd</td>
                <td>@donHang.NgayDat.ToString("dd/MM/yyyy")</td>
                <td>@donHang.TongTien.ToString("N0") đ</td>
                <td>@donHang.TrangThai</td>
            </tr>
        }
    </tbody>
</table>
