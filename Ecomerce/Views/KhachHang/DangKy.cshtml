@model ECommerce.ViewModels.DangKyViewModel

@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h2 style="font-size: 1.5rem;color: #00e8ff" >Đăng Ký</h2>
                </div>
                <div class="card-body">
                    @* Thêm ValidationSummary để hiển thị các lỗi chung *@
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form asp-action="DangKy" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="@Model.MaKh" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="@Model.MaKh" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="@Model.MatKhau" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="@Model.MatKhau" class="form-control" type="password" />
                            </div>
                            <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="@Model.Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="@Model.Email" class="form-control" type="email" />
                            </div>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Đăng ký" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
